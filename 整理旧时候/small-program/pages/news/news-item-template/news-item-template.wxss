
.news-container{
    display: flex;
    flex-direction: column;
    margin-top:20rpx;
    margin-bottom:40rpx;
    background: #fff;
    border-bottom:1px solid #ededed;
    border-top:1px solid #ededed;

}
.news-author-date{
    margin-top:10rpx;
    margin:20rpx;
    margin-left:10px;
}
.news-author-date .new-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.news-author-date .news-date{
    margin-left:20px;
    line-height: 60rpx;
    vertical-align: middle;
}
.news-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom:10px;
    margin-left:10px;
}
.news-image{
    width: 100%;
    height: 340rpx;
    margin-bottom:15px;
}

.news-content{
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left:10px;
    letter-spacing: 2rpx;
    line-height:40rpx;
}
.news-like{
    font-size:13px;
    line-height: 16px;
    margin-left:10px;
}
.news-like-image{
    height: 16px;
    width: 16px;
    margin-right:8px;
    vertical-align: middle;
}
.news-like-font{
    vertical-align: middle;
    margin-right:20px;
}