<view class="container">
    <image class="head-image" src="{{item.imgSrc}}"></image>
    <image class="audio" src="{{isPlayingMusic?'/images/icon/music-stop.png':'/images/icon/music-start.png'}}"
    catchtap="onMusicTap"
    ></image>
    <view class="author-date">
        <image class="avatar" src="{{item.avatar}}"></image>
        <text class="author">{{item.author}}</text>
        <text class="const-text">发表于</text>
        <text class="date">24小时前</text>
    </view>
    <text class="title">{{item.title}}</text>
    <view class="tool">
        <view class="circle-img">
            <image wx:if="{{collected}}" src="/images/icon/collection.png" catchtap="onCollectionTap"></image>
            <image wx:else src="/images/icon/collection-anti.png" catchtap="onCollectionTap"></image>
            <image src="/images/icon/share.png" class="share-image"></image>
        </view>
        <view class="line"></view>
    </view>
    <text class="detail">
       {{item.content}}
    </text>
</view>