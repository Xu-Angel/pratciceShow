.container{
    display: flex;
    flex-direction: column;
}
.head-image{
    width: 100%;
    height: 460rpx;
}
.audio{
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    top:175rpx;
    margin-left:-51rpx;
    opacity: 0.6;
}

.author-date{
    margin-left:30rpx;
    margin-top:20rpx;
}
.avatar{
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}

.author{
    font-size:30rpx;
    margin-left:20rpx;
    vertical-align: middle;
}
.const-text{
    font-size:24rpx;
    color:#999;
    margin-left:30rpx;
    vertical-align: middle;
}

.date{
    margin-left:30rpx;
    font-size:24rpx;
    color:#999;
    vertical-align: middle;
}

.title{
    margin-left:40rpx;
    font-size:36rpx;
    margin-top:30rpx;
    font-weight: 700;
    letter-spacing: 2px;
    color:#4b55c;
}

.tool{
    margin-top:20rpx;
}
.circle-img{
    float: right;
    margin-right:40rpx;
    vertical-align: middle;
}
.circle-img image{
    width: 90rpx;
    height: 90rpx;
}
.share-image{
    margin-left:30rpx;
}
.line{
    width: 660rpx;
    height: 1px;
    background: #e5e5e5;
    vertical-align: middle;
    position: relative;
    top:45rpx;
    margin: 0 auto;
    z-index:-99;
}
.detail{
    margin-left:30rpx;
    margin-top:20rpx;
    margin-right:30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}