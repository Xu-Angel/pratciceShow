/* pages/changePW/changePW.wxss */

.tips {
  display: block;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #fff;
  background: -webkit-linear-gradient(-180deg, #fb536c, #f74444);
}

.hiddenIpt {
  width: 100rpx;
  height: 100rpx;
  border: 1px solid red;
  position: absolute;
  left: -300rpx;
}

.pw-wrap {
  margin-left: 65rpx;
  margin-top: 60rpx;
}

.pw-wrap>.item {
  display: flex;
  align-items: center;
  width: 620rpx;
  height: 110rpx;
}

.pw-wrap>.item>text {
  margin-right: 24rpx;
  font-size: 32rpx;
  color: #34373a;
}

.pw-wrap>.item>view {
  display: flex;
  height: 62rpx;
}

.pw-wrap>.item>view>input {
  margin-left: 12rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #34373a;
  text-align: center;
  border: 1rpx solid #c6c9d0;
  border-radius: 4rpx;
}

.pw-wrap>.item:last-of-type>view>input {
  border: 1rpx solid #ee4570;
}

.ok {
  margin-top: 80rpx;
  margin-left: 65rpx;
  width: 620rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36tpx;
  border-radius: 48rpx;
  color: #fff;
  background: -webkit-linear-gradient(left, #3097ee, #63ceff);
}
